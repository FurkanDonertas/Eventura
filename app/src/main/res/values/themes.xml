<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.AndroidBitirmeProje" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Arka Plan Resmi -->
        <item name="android:windowBackground">@drawable/background_image</item>

        <!-- Durum Çubuğu ve Gezinti Çubuğu Renkleri -->
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>

        <!-- Font -->
        <item name="fontFamily">@font/montserrat_medium</item>

        <!-- Primary Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Background Colors -->
        <item name="colorBackgroundFloating">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>

        <!-- Surface Colors -->
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <!-- Error Colors -->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
    </style>

    <!-- Light/Dark Modes -->
    <style name="Theme.AndroidBitirmeProje" parent="Base.Theme.AndroidBitirmeProje" />
</resources>
